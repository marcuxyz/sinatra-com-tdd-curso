<section>
  <div class="container">
    <div class="col-12">
      <div class="mb-2">
        <% @categories.each do |category| %>
          <span class="badge bg-<%= category.color %>">
            <%= category.name %>
          </span>
        <% end %>
      </div>

      <div class="card card-body">
        <table class="table">
          <thead>
            <tr>
              <th>TÃ­tulo</th>
              <th>Categoria</th>
              <th>Status</th>
              <th>Author</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr id="post-<%= post.id %>">
                <td>
                  <a href="/post/<%= post.id %>">
                    <%= post.title %>
                  </a>
                </td>
                <td><%= post.category.name %></td>
                <td><%= post.status %></td>
                <td><%= post.user.name %></td>
                <td>
                  <button
                    id="delete-<%= post.id %>"
                    class="btn btn-danger btn-sm" 
                    onclick="deletePost('<%= post.id %>')">
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>    
    </div>
  </div>
</section>

<script>
  async function deletePost(postID) {
    let response = await fetch(`/post/${postID}`, { method: 'DELETE' })
    let { id } = await response.json()

    let element = document.getElementById(`post-${id}`)
    if(element) {
      element.remove()
    }
  }
</script>